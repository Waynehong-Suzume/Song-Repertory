      const list = document.getElementById("resultsList");
      const votedSongs = JSON.parse(localStorage.getItem("votedSongs")) || [];

      if (votedSongs.length === 0) {
        list.innerHTML = "<li>íˆ¬í‘œí•œ ê³¡ì´ ì—†ìŠµë‹ˆë‹¤.</li>";
